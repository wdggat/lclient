<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >


    <TextView
        android:id="@+id/partyb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/partyb" />
    
    <TextView 
        android:id="@+id/topicV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/topicV"
        android:layout_below="@id/partyb"/>
        <!-- android:layout_marginTop="2dip"/> -->
    
    <EditText 
        android:id="@+id/topicET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_toRightOf="@id/topicV"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_alignParentRight="true"
        android:background="@color/more_gray"
        android:layout_alignTop="@id/topicV"/>

        <!-- android:background="@drawable/edittext_border" -->
    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/email_hint"
        android:layout_toRightOf="@id/partyb"
        android:background="@android:color/holo_orange_dark"
        android:ems="10"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>
    
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/submit" />
        
<!--         android:background="@drawable/edittext_border" -->
    <EditText
        android:id="@+id/mailtext"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/topicV"
        android:layout_above="@id/submit"
        android:layout_centerHorizontal="true"
        android:background="@color/gray"
        android:scrollbars="vertical"
        android:layout_marginTop="@dimen/margin_top"
        android:ems="10"
        android:inputType="textMultiLine" />
    
    <Button
        android:id="@+id/make_draft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/make_draft_text" />
    
    <Button 
        android:id="@+id/take_draft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/take_draft_text"/>

</RelativeLayout>