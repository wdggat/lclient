<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
    <!-- <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"> -->
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="round_corner">
        <item name="android:background">@drawable/rounded_outer</item>
    </style>
    
<!--         <item name="android:baselineAlignBottom">@drawable/text_bottom_line</item> -->
    <style name="edittext_bottomline">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawableBottom">@drawable/text_bottom_line</item>
    </style>
    
    <style name="edittext_multilines">
        <item name="android:background">@drawable/rounded_outer</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:stretchMode">spacingWidth</item>
    </style>
    
    <style name="button_round">
        <item name="android:background">@drawable/rounded_outer</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:mode">oneLine</item>
    </style>
    
    <style name="round_editable_text">
        <item name="android:background">@drawable/rounded_outer</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <style name="msginfo_left">
        <item name="android:background">@drawable/rounded_outer</item>
    </style>
    
    <style name="msginfo_right">
        <item name="android:background">@drawable/rounded_outer_colored</item>
    </style>
    
</resources>
